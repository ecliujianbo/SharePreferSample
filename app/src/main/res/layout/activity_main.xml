<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.ljb.shareprefers.MainActivity">

    <TextView
            android:id="@+id/tv_main_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show data"/>
    <Button
            android:id="@+id/btn_save_float"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="保存float"/>
    <Button
            android:id="@+id/btn_get_float"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="获取float"/>
    <Button
            android:id="@+id/btn_save_string"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="保存string"/>
    <Button
            android:id="@+id/btn_get_string"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="获取string"/>
</LinearLayout>
